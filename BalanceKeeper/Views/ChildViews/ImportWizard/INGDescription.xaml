<UserControl x:Class="BalanceKeeper.Views.ChildViews.ImportWizard.INGDescription"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BalanceKeeper.Views.ChildViews.ImportWizard"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="• Ga via naar"/>
            <Label>
                <Hyperlink Click="Hyperlink_Click">mijn.ING.nl</Hyperlink>
            </Label>
        </StackPanel>

        <Label Content="• Klik op het rekkeningnummer die u wilt importeren"/>
        <Label Content="• Klik op het download icoon om af- en bijschrijvingen te downloaden"/>
        <Label Content="• Selecteer periode waarvan u wilt exporteren"/>
        <Label Content="• Selecteer als type CSV"/>
        <Label Content="• Download het bestand"/>
        <Label Content="• Selecteer het bestand hierboven"/>
        <Label Content="• Druk op 'Starten met importeren'"/>
    </StackPanel>
</UserControl>
