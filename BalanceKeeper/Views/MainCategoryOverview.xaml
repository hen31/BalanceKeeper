<simpleChildWindow:ChildWindow x:Class="BalanceKeeper.Views.MainCategoryOverview"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BalanceKeeper.Views"
             mc:Ignorable="d" 
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                                xmlns:simpleChildWindow="clr-namespace:MahApps.Metro.SimpleChildWindow;assembly=MahApps.Metro.SimpleChildWindow"
             ShowCloseButton="True"
             d:DesignHeight="300" d:DesignWidth="300"
             Title="Hoofdcategorieen"
             MinHeight="450"
             Padding="15">
    <simpleChildWindow:ChildWindow.OverlayBrush>
        <SolidColorBrush Opacity="0.7" Color="{StaticResource MahApps.Colors.ThemeForeground}" />
    </simpleChildWindow:ChildWindow.OverlayBrush>
    <Grid>
        <local:MainCategoryView DataContext="{Binding}"/>
    </Grid>
    </simpleChildWindow:ChildWindow>

